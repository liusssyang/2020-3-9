<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_all"
    android:background="#ffffff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/main_login"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/icon_left_default"/>

    <EditText
        android:id="@+id/ed_login_username"
        android:gravity="center"
        android:layout_marginEnd="60dp"
        android:background="@drawable/background_square_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/MyEditText"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_login"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:focusable="true"
            android:clickable="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/eye"
            android:background="@drawable/eye_close"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <EditText
        android:id="@+id/ed_login_password"
        android:gravity="center"
        android:layout_marginEnd="60dp"
        android:background="@drawable/background_square_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/MyEditText"
        android:inputType="textPassword"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/background_square_login2">

        <Button
            android:layout_marginStart="0dp"
            android:id="@+id/bt_login"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/login" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_environment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产环境"
            />

        <RadioButton
            android:id="@+id/rb_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试环境"
            />

        <RadioButton
            android:id="@+id/rb_qa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QA环境"
            />
    </RadioGroup>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >
        <Button
            android:id="@+id/bt_login_with_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#00000000"
            android:layout_marginEnd="20dp"
           />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#F2F3F7"/>
        <Button
            android:layout_marginStart="20dp"
            android:id="@+id/bt_goto_regester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="用户注册"
            />
    </LinearLayout>
</RelativeLayout>